[MASTER]
jobs=1 # Fix for pydantic
persistent=yes
ignore-patterns=tests/*

[MESSAGES CONTROL]
disable=C0114, # missing-module-docstring
        C0115, # missing-class-docstring
        C0116, # missing-function-docstring, re-enable this at some point
        R0903, # too-few-public-methods
        W1203, # logging-fstring-interpolation
        E0401,  # import-error, not required for signals
        E0611  # no-name-in-module, seems to conflict with tensorflow

[REPORTS]
output-format=text

[REFACTORING]

[BASIC]

[FORMAT]
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

[LOGGING]
logging-format-style=new

[MISCELLANEOUS]

[SIMILARITIES]
min-similarity-lines=8

[SPELLING]

[STRING]

[TYPECHECK]

[VARIABLES]

[CLASSES]

[DESIGN]
max-args=6

[IMPORTS]

[EXCEPTIONS]
